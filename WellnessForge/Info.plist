<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>

    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>

    <key>CFBundleExecutable</key>
    <string>WellnessForge</string>

    <key>CFBundlePackageType</key>
    <string>APPL</string>

    <key>CFBundleDisplayName</key>
    <string>WellnessForge</string>

    <key>CFBundleVersion</key>
    <string>$(CURRENT_PROJECT_VERSION)</string>

    <key>CFBundleShortVersionString</key>
    <string>$(MARKETING_VERSION)</string>

    <key>LSApplicationCategoryType</key>
    <string>public.app-category.healthcare-fitness</string>

    <key>NSHealthShareUsageDescription</key>
    <string>WellnessForge reads your health and fitness data — including steps, heart rate, sleep, and calories — to generate personalized AI wellness insights, daily predictions, and coaching recommendations. All data is processed entirely on your device and never shared with third parties.</string>

    <key>NSHealthUpdateUsageDescription</key>
    <string>WellnessForge does not write any data to Apple Health.</string>

    <key>NSLocationWhenInUseUsageDescription</key>
    <string>WellnessForge uses your approximate location to fetch local weather conditions, which are used to provide outdoor activity guidance tailored to your environment.</string>

    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSExceptionDomains</key>
        <dict>
            <key>api.open-meteo.com</key>
            <dict>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <false/>
                <key>NSIncludesSubdomains</key>
                <true/>
            </dict>
        </dict>
    </dict>

    <key>UIBackgroundModes</key>
    <array>
        <string>fetch</string>
        <string>processing</string>
    </array>

    <key>BGTaskSchedulerPermittedIdentifiers</key>
    <array>
        <string>BitForge-Lab.WellnessForge.refresh</string>
    </array>

    <key>NSCameraUsageDescription</key>
    <string>WellnessForge AI uses the camera for meal scanning and AR workout posture guidance.</string>
    
    <key>NSLocalNetworkUsageDescription</key>
    <string>Required for improved AR experience and background synchronization.</string>

    <key>UIRequiredDeviceCapabilities</key>
    <array>
        <string>arm64</string>
    </array>

    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
    </array>

    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <key>UILaunchScreen</key>
    <dict/>

</dict>
</plist>
